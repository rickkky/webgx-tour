+
+async function loadImage(
+  src: string | { src: string },
+): Promise<HTMLImageElement> {
+  const url = typeof src === 'string' ? src : src.src;
+  return new Promise((resolve, reject) => {
+    const img = new Image();
+    img.onload = () => resolve(img);
+    img.onerror = reject;
+    img.src = url;
+  });
