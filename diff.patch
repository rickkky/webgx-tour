+    if (this.inited) {
+      return;
+    }
+    this.inited = true;
+    this.pane = new Pane({ title: 'Pane' });
+    this.initPane();
+    monitorFrame(this.pane!);
+    Promise.all([this.initResize(), this.initContext()]).then(() => {
+      if (this.disposed) {
+        return;
+      }
+      this.render = this.initRender();
+      this.startRenderLoop();
