+      title: 'State',
+    });
+
+    bindSignal(folder, this.kernel1, {
+      options: {
+        list: Object.keys(kernels),
+      },
+    });
+    bindSignal(folder, this.kernel2, {
+      options: {
+        list: Object.keys(kernels),
+      },
+    });
+    bindSignal(folder, this.kernel3, {
+      options: {
+        list: Object.keys(kernels),
+      },
+    });
+  }
+
+  initRender() {
+    // Load image
